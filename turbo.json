{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "storybook:expo:ios": {
      "cache": false,
      "persistent": true
    },
    "storybook:expo:android": {
      "cache": false,
      "persistent": true
    },
    "ios": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "PG_HOST",
        "PG_PORT",
        "PG_USER",
        "PG_PASSWORD",
        "PG_DATABASE",
        "PORT",
        "JWT_EXPIRES_IN",
        "JWT_REFRESH_EXPIRES_IN",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "BREVO_API_KEY",
        "DOMAIN",
        "RESET_PASSWORD_EXPIRES_IN",
        "VERIFY_EMAIL_EXPIRES_IN",
        "BCRYPT_SALT_ROUNDS",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "OPENAI_API_KEY",
        "WEBHOOK_SECRET",
        "GCP_SERVICE_ACCOUNT_JSON",
        "GCS_BUCKET_NAME"
      ]
    },
    "lint": {},
    "format": {},
    "generate": {
      "cache": false
    },
    "split": {
      "cache": false
    },
    "test": {},
    "test:e2e": {}
  }
}
