{
  "name": "@vvruspat/words-types",
  "version": "0.9.0",
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --project tsconfig.json --watch",
    "generate": "openapi-typescript ../../apps/api/openapi.yaml --output src/api.ts && npm run split",
    "split": "ts-node src/scripts/generate-aliases.ts",
    "lint": "biome lint src",
    "format": "biome check src --write --unsafe"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@nestjs/mapped-types": "*",
    "@nestjs/swagger": "^11.2.0"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "@types/node": "^20.3.1",
    "openapi-typescript": "^7.9.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  }
}
